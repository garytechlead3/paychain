{
  "name": "chainpay",
  "version": "0.1.0",
  "description": "Chainpay",
  "author": "Jawad Ahmed <contact@jahmed.me>",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": ">=6.9.1",
    "npm": ">=2.15.11",
    "yarn": ">=0.20.3"
  },
  "scripts": {
    "start": "nodemon ./dist/index.js",
    "start:build": "gulp serve",
    "queue": "nodemon ./dist/queue/index.js",
    "queue:build": "yarn build && nodemon ./dist/queue/index.js",
    "cron": "nodemon ./dist/cronjob/index.js",
    "cron:build": "yarn build && nodemon ./dist/cronjob/index.js",
    "initialize": "node ./dist/scripts/init.js",
    "initialize:build": "yarn build && node ./dist/scripts/init.js",
    "crypto": "node ./dist/scripts/encrypt.js",
    "crypto:build": "yarn build && node ./dist/scripts/encrypt.js",
    "start:debug": "cross-env DEBUG=amida-api-boilerplate:* yarn start",
    "build": "gulp",
    "lint": "esw *.js server config --color",
    "lint:watch": "yarn lint -- --watch",
    "beautify": "es-beautifier -u -c .eslintrc.js *.js server config",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --slow 0 --colors --compilers js:babel-core/register tests/stress --recursive --timeout 150000",
    "test:watch": "yarn test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --ui bdd --reporter spec --colors --compilers js:babel-core/register tests --recursive",
    "test:check-coverage": "yarn test:coverage && istanbul check-coverage",
    "report-coverage": "coveralls < ./coverage/lcov.info"
  },
  "dependencies": {
    "bluebird": "3.4.6",
    "body-parser": "1.15.2",
    "chai": "^3.4.1",
    "compression": "1.6.2",
    "cookie-parser": "1.4.3",
    "cors": "2.8.1",
    "debug": "^2.4.5",
    "del": "^2.2.0",
    "dotenv": "^4.0.0",
    "ethereumjs-tx": "^1.3.5",
    "express": "^4.16.3",
    "express-jwt": "5.1.0",
    "express-validation": "1.0.1",
    "express-winston": "2.1.2",
    "gulp": "3.9.1",
    "gulp-load-plugins": "^1.2.0",
    "helmet": "3.1.0",
    "http-status": "^0.2.0",
    "joi": "10.0.6",
    "jsonwebtoken": "7.1.9",
    "kue": "^0.11.6",
    "lodash": "4.17.4",
    "method-override": "^2.3.5",
    "morgan": "1.7.0",
    "mysql": "2.15.0",
    "mysql2": "^1.5.3",
    "node-cron": "^1.2.1",
    "run-sequence": "^1.1.5",
    "sequelize": "^4.37.10",
    "socket.io": "^2.1.1",
    "supertest": "2.0.1",
    "supertest-as-promised": "4.0.2",
    "uuid": "^3.3.2",
    "web3": "^1.0.0-beta.34",
    "winston": "2.3.0",
    "winston-papertrail": "^1.0.5"
  },
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-core": "6.18.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-stage-2": "6.18.0",
    "commitizen": "^2.9.2",
    "coveralls": "^2.11.6",
    "cross-env": "3.1.3",
    "eslint": "3.16.1",
    "eslint-config-airbnb-base": "7.1.0",
    "eslint-plugin-import": "1.16.0",
    "eslint-watch": "2.1.14",
    "gulp-babel": "6.1.2",
    "gulp-newer": "^1.1.0",
    "gulp-nodemon": "^2.0.6",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-util": "^3.0.7",
    "husky": "^0.13.1",
    "istanbul": "1.1.0-alpha.1",
    "loadtest": "^3.0.3",
    "mocha": "3.2.0",
    "validate-commit-msg": "^2.6.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "add-module-exports"
    ]
  }
}
